<h1><%= t 'contracts.list' %></h1>

<table>
  <tr>
    <th><%= t 'patterns.name' %></th>
    <th><%= t 'contracts.code' %></th>
    <th><%= t 'patterns.description' %></th>
    <th>Status</th>
    <th><%= t 'patterns.started_at' %></th>
    <th><%= t 'patterns.ended_at' %></th>
    <th><%= t 'contracts.value' %></th>
    <th><%= t 'contracts.leader' %></th>
    <th><%= t 'contracts.project' %></th>
  </tr>

<% for contract in @contracts %>
  <tr>
    <td><%=h contract.name %></td>
    <td><%=h contract.code %></td>
    <td><%=h contract.description %></td>
    <td><%=h contract.status %></td>
    <td><%=h (l contract.started_at) if contract.started_at %></td>
    <td><%=h (l contract.ended_at) if contract.ended_at %></td>
    <td><%=h contract.value %></td>
    <td><%=h contract.leader.name %></td>
    <td><%=h contract.project.name%></td>
    <td><%= link_to (t 'patterns.show'), contract %></td>
    <td><%= link_to (t 'patterns.edit'), edit_contract_path(contract) %></td>
    <td><%= link_to (t 'patterns.destroy'), contract, :confirm => (t 'patterns.confirm'), :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to (t 'contracts.new'), new_contract_path %>
