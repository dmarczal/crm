    <% div_for project, :class => "group" do  %>
        <h2><%= project.name %></h2>
        <ul id="project_tasks_<%= project.id %>">
            <% tasks.each do |task| %>
                <%= render :partial => "task", :locals => {:task => task} %>
                <%= link_to 'edit', :action => :edit, :id => task  %>
            <% end %>
        </ul>
    <% end %>
