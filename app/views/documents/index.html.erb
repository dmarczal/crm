<h1>Listing documents of <%= @parent.name %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Download</th>
  </tr>

<% for document in @documents %>
  <tr>
    <td><%=h document.title %></td>
    <td><%= link_to "Download", document.doc.url %></td>
    <td><%= link_to 'Show', [@parent, document] %></td>
    <td><%= link_to 'Edit', edit_polymorphic_path([@parent, document]) %></td>
    <td><%= link_to 'Destroy', [@parent, document], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>


<br />

<%= link_to "New", new_polymorphic_path([@parent, :document]) %>

