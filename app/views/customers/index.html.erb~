<h1><%= t 'customers.list' %></h1>

<% cache(:controller => "customer" :action => "index", :id => session[:user]) do %>
<table>
  <tr>
    <th><%= t 'patterns.title' %></th>
    <th><%= t 'patterns.description' %></th>
    <th><%= t 'customers.rate' %></th>
    <th><%= t 'patterns.phone' %></th>
  </tr>

<% for customer in @customers %>
  <tr>
    <td><%=h customer.name %></td>
    <td><%=h customer.description %></td>
    <td><%=h customer.rating %></td>
    <td><%=h customer.phone %></td>
    <td><%= link_to (t 'patterns.show'), customer %></td>
    <td><%= link_to (t 'patterns.edit'), edit_customer_path(customer) %></td>
    <td><%= link_to (t 'patterns.destroy'), customer, :confirm => (t 'patterns.confirm'), :method => :delete %></td>
  </tr>
<% end %>
</table>
<% end %>
<br />

<%= link_to (t 'customers.new'), new_customer_path %>
